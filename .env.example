# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram numeric user id (the bot will only accept your logs)
TELEGRAM_USER_ID=123456789

# OpenAI API key used to generate a daily morning quote
OPENAI_API_KEY=your_openai_api_key_here

# Secret token to verify Telegram webhook requests
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Secret token for Vercel cron auth
CRON_SECRET=your_cron_secret_here

# Reminder schedule (24h format, local machine timezone)
REMINDER_HOUR=18
REMINDER_MINUTE=0

# How many minutes before a reminder can be snoozed by button
SNOOZE_MINUTES=60

# Postgres connection string
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require
